# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown files
*.md text eol=lf

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# CSV data files
*.csv text eol=lf

# Configuration files
Makefile text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Binary files
*.joblib binary
*.pkl binary
*.pyc binary
*.so binary

